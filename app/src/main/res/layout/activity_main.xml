<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2b3137"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/et_search_user"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#495057"
        android:hint="@string/hint_suggest_user_id"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="#dee2d6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommend_user_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="14dp"
        tools:itemCount="14"
        tools:listitem="@layout/item_recommend_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_user" />

</androidx.constraintlayout.widget.ConstraintLayout>